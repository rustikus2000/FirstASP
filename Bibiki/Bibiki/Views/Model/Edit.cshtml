@model Model

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-light">Редактировать Модель</h2>
            <hr />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BrandId" class="control-label"></label>
        <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brand"></select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="IsActive"></label>
        <input asp-for="IsActive" class="form-check" />
    </div>
    <button type="submit" class="btn btn-primary">Обновить</button>
    <a asp-controller="Model" asp-action="Index" class ="btn btn-dark">Назад</a>
</form>